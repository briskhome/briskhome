{
  "extends": "airbnb",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "import/no-dynamic-require": [0],
    "import/no-extraneous-dependencies": [0],
    "func-names": [0],
    "global-require": [0],
    "prefer-arrow-callback": [0],
    "strict": [0]
  }
}
