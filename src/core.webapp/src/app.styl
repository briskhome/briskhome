

$font-family-sans-serif ?= Roboto, Helvetica, Arial, sans-serif

$body-bg ?=                        #fbfbfb
$navbar-height ?=                  70px

$navbar-padding-horizontal ?= 0
$navbar-padding-vertical ?= 25px

$navbar-default-color ?=           #777
$navbar-default-bg ?=              #fff
$navbar-default-border ?=          darken($navbar-default-bg, 6.5)

$nav-link-padding ?=                        10px 25px

$panel-bg ?= #fff
$panel-border-radius ?= 0
$panel-heading-padding ?=     20px 30px

$panel-default-text ?=        $gray-dark
$panel-default-border ?=      transparent
$panel-default-heading-bg ?=  #fff

@import 'bootstrap'

.navbar {
  box-shadow 1px 2px 3px 0 rgba(0,0,0,0.10)
}

.navbar-brand {
  padding 20px 20px 20px 0
}

.navbar-image {
  border-radius 50%
  border 1px solid $gray-light
  height: 38px //$navbar-height
  //max-width: 50px
  margin: 16px 5px 16px 10px
}

.navbar-nav
  > li > a
    font-size 14px
    text-transform: uppercase

.navbar-profile {
  padding 0 !important
}

//@media (max-width $grid-float-breakpoint-max)

.panel
  box-shadow 0px 2px 3px 0 rgba(0,0,0,0.10)

.panel-heading
  //border-bottom-color #7f7f7f
  font-size 18px
  color #4A4A4A
  letter-spacing 0

  .dots
    float right
    padding 10px 0

.panel-title
  font-size 18px

.panel-body
  background #FFFFFF
  padding 20px 30px


.panel-default > .panel-heading
  border-bottom 1px solid #eee

.map-placeholder
  min-height 300px