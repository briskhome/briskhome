.briskhome-avatar
  display inline-block
  border-radius 50px
  border 1px solid #eaeaea
  overflow hidden
  height 42px
  width 42px
  background-color #f9d21c
  text-align center
  position relative

  &__image
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    z-index 1

  &__name
    width 100%
    height 100%
    color white
    font-size x-large
    line-height 175%
    z-index 10
