.briskhome-avatar
  position relative
  display block
  width 42px
  height 42px
  margin 10px auto
  border 1px solid #eeeeee
  border-radius 50px
  background-color #fafafa
  text-align center

  &__image
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 100%

  &__name
    width 42px
    height 42px
    color #333333
    font-weight 400
    font-size 1.25em
    line-height 215%

  &__online
    position absolute
    top 75%
    left 75%
    width 12px
    height 12px
    border 1px solid #fafafa
    border-radius 50%
    background-color #64D095
