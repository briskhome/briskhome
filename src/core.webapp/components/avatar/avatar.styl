.briskhome-avatar
  position relative
  display inline-block
  width 42px
  height 42px
  margin 10px 0
  border 1px solid #B9B9B9
  border-radius 50px
  background-color #f9d21c
  text-align center

  &__image
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 100%

  &__name
    width 100%
    height 100%
    color white
    font-size x-large
    line-height 185%

  &__online
    position absolute
    top 75%
    left 75%
    width 12px
    height 12px
    border 1px solid #b9b9b9
    border-radius 50%
    background-color #64D095
