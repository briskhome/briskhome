.briskhome-select
  display block
  box-sizing border-box
  width 100%
  height 36px
  padding 0 16px
  border 1px solid #efefef
  border-radius 4px
  color #333
  font-weight 200
  font-size 14px
  transition border-color 0.25s ease

  &::-webkit-input-placeholder
    color #ccc

  &:disabled,
  &_disabled
    background #fafafa

  &:active,
  &:focus,
  &:hover
    border-color #b9b9b9

  &:focus
    outline none

  &_invalid
    border 1px solid #CF4B5D