.briskhome-label
  display block
  text-align left
  margin-bottom 14px
  font-size 14px

  &__caption
    margin 8px 20px 12px

  &__text
    margin-bottom 4px

.briskhome-input
  display block
  box-sizing border-box
  width 100%
  height 36px
  padding 0 16px 0 16px
  border 1px solid #eee;
  border-radius 8px
  font-size 14px
  font-weight 200
  color #333 
  
  transition border-color 0.25s ease
  
  &::-webkit-input-placeholder
    color #ccc
  
  &:disabled,
  &_disabled
    background #efefef
  
  &:active,
  &:focus,
  &:hover
    border-color #b9b9b9
  
  &:focus
    outline none
  
  &_invalid
    border 1px solid #CF4B5D

.anim
  &_show_block
    animation-name show-block
    animation-duration 0.25s

@keyframes show-block
  from
    opacity 0
    transform rotateX(-60deg) translateY(-10px)
  to
    opacity 1
    transform rotateX(0deg) translateY(0px)
    animation-fill-mode none