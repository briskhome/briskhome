.briskhome-modal
  &__content
    position absolute
    top 35%
    right auto
    bottom auto
    left 50%
    overflow auto
    -webkit-overflow-scrolling touch
    min-height 300px
    width 375px
    margin-right -50%
    padding 20px
    outline none
    border 1px solid #ccc
    border-radius 16px
    background #fff
    box-shadow 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23)
    text-align center
    transform translate(-50%, -50%)

  &__overlay
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    background-color rgba(250, 250, 250, 0.5)
    opacity 0
    transition all 0.25
    transform rotateX(-90deg)
    perspective 1300px
    transform-style preserve-3d

    &_open
      opacity 1
      transform rotateX(0)
