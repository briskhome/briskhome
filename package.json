{
  "name": "briskhome",
  "version": "0.3.0",
  "description": "",
  "main": "briskhome.js",
  "scripts": {
    "babel": "node_modules/.bin/babel src -d lib --copy-files --ignore node_modules",
    "babel-watch": "vagrant up && node_modules/.bin/babel src --watch --out-dir lib --copy-files --ignore node_modules & yarn webpack-watch",
    "build": "yarn build-cleanup && yarn babel && yarn webpack",
    "build-cleanup": "rm -rf lib/*",
    "build-watch": "yarn build-cleanup && yarn babel-watch",
    "flow": "node_modules/.bin/flow",
    "lint": "eslint src --ext .js,.jsx --ignore-pattern '**/*.spec.js' --ignore-pattern '**/__mocks__' --ignore-pattern '**/__tests__/*' --ignore-pattern '**/*_spec.js'",
    "start": "node lib/core.js | bunyan -o short",
    "start-watch": "node_modules/.bin/nodemon lib/core.js | node_modules/.bin/bunyan -o short",
    "start-ugly": "node lib/core.js --ugly | bunyan -o short",
    "test": "node_modules/.bin/jest src --coverage",
    "postinstall": "npm config set briskhome_dir /opt/briskhome",
    "webpack": "node_modules/.bin/webpack --config ./src/core.webapp/webpack.config.js --context ./src/core.webapp",
    "webpack-watch": "node_modules/.bin/webpack --config ./src/core.webapp/webpack.config.js --context ./src/core.webapp --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "Egor Zaitsev <ezaitsev@briskhome.com>",
  "license": "MIT",
  "engines": {
    "node": ">=5.0.0"
  },
  "private": true,
  "devDependencies": {
    "@storybook/react": "^3.2.5",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-inline-imports-commonjs": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "0.45.0",
    "jest": "^20.0.4",
    "react-router-dom": "^4.1.2",
    "react-test-renderer": "^15.6.1",
    "redux-devtools": "^3.4.0",
    "redux-devtools-dock-monitor": "^1.1.2",
    "redux-devtools-log-monitor": "^1.3.0",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "agenda": "1.0.0",
    "architect": "0.1.11",
    "async": "^2.1.4",
    "bunyan": "^1.8.1",
    "dataloader": "^1.3.0",
    "eventemitter2": "^4.1.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "forge": "2.3.0",
    "graphql": "0.11.7",
    "graphql-tools": "^1.0.0",
    "jest-cli": "21.1.0",
    "mongoose": "4.11.14",
    "nconf": "^0.8.4",
    "node-forge": "^0.6.48",
    "node-telegram-bot-api": "^0.21.1",
    "nodemon": "^1.11.0",
    "properties": "1.2.1",
    "rc-menu": "^5.0.10",
    "react": "^15.6.1",
    "react-apollo": "1.4.15",
    "react-aria-menubutton": "^5.0.2",
    "react-dom": "^15.6.1",
    "react-dropdown": "heuels/react-dropdown#disabled_classname",
    "react-flexbox-grid": "^1.1.3",
    "react-input-mask": "^1.0.7",
    "react-minimal-dropdown": "^1.1.1",
    "react-modal": "^2.2.4",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-router-redux": "^4.0.8",
    "react-simple-dropdown": "^3.0.0",
    "react-toggle": "^4.0.1",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "uuid-1345": "^0.99.6"
  },
  "jest": {
    "automock": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "moduleNameMapper": {
      "\\.(css|styl)$": "<rootDir>/src/__mocks__/styl.js"
    }
  }
}
