{
  "name": "briskhome",
  "version": "0.3.0",
  "description": "",
  "main": "briskhome.js",
  "scripts": {
    "babel-watch": "vagrant up && node_modules/.bin/babel src --watch --out-dir lib --copy-files --ignore node_modules",
    "build": "yarn build-cleanup && node_modules/.bin/babel src -d lib --copy-files --ignore node_modules",
    "build-cleanup": "rm -rf lib/*",
    "build-watch": "yarn build-cleanup && yarn babel-watch",
    "flow": "node_modules/.bin/flow",
    "lint": "eslint src --ext .js,.jsx --ignore-pattern **/*.spec.js",
    "start": "node lib/core.js | bunyan -o short",
    "start-watch": "node_modules/.bin/nodemon lib/core.js | node_modules/.bin/bunyan -o short",
    "start-ugly": "node lib/core.js --ugly | bunyan -o short",
    "test": "node_modules/.bin/jest src --coverage",
    "postinstall": "npm config set briskhome_dir /opt/briskhome"
  },
  "author": "Egor Zaitsev <ezaitsev@briskhome.com>",
  "license": "MIT",
  "engines": {
    "node": ">=5.0.0"
  },
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-inline-imports-commonjs": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.45.0",
    "jest": "^20.0.4"
  },
  "dependencies": {
    "agenda": "^0.8.1",
    "architect": "0.1.11",
    "async": "^2.1.4",
    "bunyan": "^1.8.1",
    "dataloader": "^1.3.0",
    "eventemitter2": "^4.1.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "forge": "2.3.0",
    "graphql": "^0.10.5",
    "graphql-tools": "^1.0.0",
    "mongoose": "4.2.8",
    "nconf": "^0.8.4",
    "node-forge": "^0.6.48",
    "node-telegram-bot-api": "^0.21.1",
    "nodemon": "^1.11.0",
    "properties": "1.2.1",
    "uuid-1345": "^0.99.6"
  },
  "peerDependencies": {
    "kerberos": "0.0.19"
  },
  "jest": {
    "automock": true
  }
}
